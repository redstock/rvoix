<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" android:minWidth="240dip">
  <ProgressBar android:id="@+id/ProgressBar"
   style="?android:attr/progressBarStyleHorizontal" android:layout_height="8px"
   android:layout_width="fill_parent" android:layout_marginTop="8dp"></ProgressBar>
  <LinearLayout android:id="@+id/LinearLayout01" 
  	android:layout_width="fill_parent" 
  	android:orientation="horizontal"
  	android:layout_height="wrap_content" android:layout_marginTop="8dp">
  	<EditText android:text="" android:id="@+id/EditText" 
  		android:layout_width="wrap_content"
  		android:singleLine="true" 
  		android:textSize="20dp"   
  		android:layout_weight="8"
  		android:layout_height="wrap_content">
	</EditText>
	<Button android:text="@string/SaveRecord" android:layout_width="wrap_content" android:textSize="20dp"  
		android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/ButtonSave">
	</Button>
  </LinearLayout>
  <LinearLayout android:id="@+id/LinearLayout02" 
  	android:layout_width="fill_parent" 
  	android:orientation="horizontal"
   	android:layout_height="wrap_content" android:layout_marginTop="8dp">
  	<Button android:text="@string/StartRecord" android:layout_width="0dp" android:textSize="20dp"
  		android:layout_height="wrap_content"
  		android:layout_weight="1" android:id="@+id/ButtonRR">
  	</Button>
  </LinearLayout>

</LinearLayout>
