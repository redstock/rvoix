<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/LayoutRoot" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:orientation="vertical"
	android:gravity="center_vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">

  <TextView android:text="Record the call " android:id="@+id/TextView" 
  	android:layout_height="wrap_content" android:textSize="24dp" android:textColor="#00f000" 
  	android:layout_width="fill_parent" android:gravity="center_horizontal" android:paddingBottom="8dip" >
  </TextView>

  <LinearLayout android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:orientation="horizontal"
	android:gravity="center_horizontal"
	android:paddingBottom="8dip">
		<ImageView android:id="@+id/ImageView" 
			android:layout_width="240dip" 
			android:layout_height="240dip" 
			android:scaleType="center">
		</ImageView>
  </LinearLayout>

  <LinearLayout android:id="@+id/LinearLayout02" 
  	android:layout_width="fill_parent" 
  	android:orientation="vertical"
  	android:gravity="center_vertical"
  	android:layout_height="wrap_content">
  	<Button android:layout_width="fill_parent" 
  		android:layout_height="wrap_content"
  		android:layout_weight="1" android:id="@+id/ButtonHup" android:text="@string/SEndCall">
  	</Button>
  	<Button android:layout_width="fill_parent" 
  		android:layout_height="wrap_content"
  		android:layout_weight="1" android:id="@+id/ButtonYes" android:text="@string/SStart">
  	</Button>
  </LinearLayout>

</LinearLayout>