<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    >
<Button android:id="@+id/ButtonRR" android:textSize="16dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/RRMode"></Button>
<Button android:id="@+id/ButtonSetup" android:textSize="16dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/Settings"></Button>
<Button android:id="@+id/ButtonAbout" android:textSize="16dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/SAbout"></Button>
<Button android:id="@+id/ButtonRec" android:textSize="16dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/SRecordings"></Button>
<Button android:id="@+id/ButtonQuit" android:textSize="16dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/Exit"></Button>

</LinearLayout>
